---
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';
import MapImage from '../../assets/google-map.avif';

// Import your local map image or use a remote URL if you prefer
// If you don't have this file, change src={MapImage} to a URL string below.
// import MapImage from '../../assets/google-map.avif'; 

const contactDetails = [
  {
    title: "Visit Us",
    content: "108 Coconut Grove Lane, Ahangama, Southern Province, Sri Lanka",
    icon: "heroicons:map-pin"
  },
  {
    title: "Email Us",
    content: "hello@sankalpayoga.lk",
    icon: "heroicons:envelope"
  },
  {
    title: "Call Us",
    content: "+94 77 123 4567 (WhatsApp Available)",
    icon: "heroicons:phone"
  }
];
---

<section class="py-24 bg-secondary min-h-screen flex items-center">
  <div class="container-custom">

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-24 items-start">
      
      <div class="space-y-10">
        
        <div class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100">
          <div class="space-y-8">
            {contactDetails.map((item) => (
              <div class="flex items-start gap-4">
                
                <div class="flex-shrink-0 w-12 h-12 bg-primary/5 rounded-full flex items-center justify-center text-primary">
                  <Icon name={item.icon} class="w-6 h-6" />
                </div>

                <div>
                  <h3 class="font-bold text-primary text-lg mb-1">{item.title}</h3>
                  <p class="text-text-muted text-sm leading-relaxed max-w-xs">{item.content}</p>
                </div>
              </div>
            ))}
          </div>
        </div>

        <a
          href="https://goo.gl/maps/YourMapLinkHere" 
          target="_blank"
          rel="noopener noreferrer"
          class="block rounded-2xl overflow-hidden shadow-sm h-64 relative group cursor-pointer"
        >
          <Image 
            src= {MapImage},
            alt="Map Location of Ahangama" 
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
          />
          
          <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-colors flex items-center justify-center">
             <span class="bg-white/90 px-4 py-2 rounded-full text-xs font-bold uppercase tracking-widest text-primary backdrop-blur-md shadow-lg flex items-center gap-2">
               <Icon name="heroicons:map" class="w-4 h-4" />
               View on Google Maps
             </span>
          </div>
        </a>

      </div>

      <div class="bg-white p-8 md:p-10 rounded-3xl shadow-lg border border-gray-100">
        <h2 class="text-3xl font-bold text-primary mb-6">Send us a Message</h2>
        
        <form class="space-y-6">
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Full Name</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                placeholder="Jane Doe"
                class="w-full px-4 py-3 rounded-lg bg-gray-50 border-transparent focus:border-accent focus:bg-white focus:ring-0 transition-colors"
                required
              />
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                placeholder="jane@example.com"
                class="w-full px-4 py-3 rounded-lg bg-gray-50 border-transparent focus:border-accent focus:bg-white focus:ring-0 transition-colors"
                required
              />
            </div>
          </div>

          <div>
            <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">I'm interested in...</label>
            <div class="relative">
              <select 
                id="subject" 
                name="subject"
                class="w-full px-4 py-3 rounded-lg bg-gray-50 border-transparent focus:border-accent focus:bg-white focus:ring-0 transition-colors cursor-pointer appearance-none"
              >
                <option>200-Hour Teacher Training</option>
                <option>Booking a Retreat</option>
                <option>General Inquiry</option>
                <option>Partnerships</option>
              </select>
              <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-4 text-gray-500">
                <Icon name="heroicons:chevron-down" class="w-4 h-4" />
              </div>
            </div>
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Your Message</label>
            <textarea 
              id="message" 
              name="message" 
              rows="5" 
              placeholder="Tell us a bit about your yoga journey..."
              class="w-full px-4 py-3 rounded-lg bg-gray-50 border-transparent focus:border-accent focus:bg-white focus:ring-0 transition-colors resize-none"
              required
            ></textarea>
          </div>

          <button type="submit" class="w-full btn-primary py-4 text-lg shadow-lg hover:shadow-xl transform active:scale-95 transition-all flex justify-center items-center gap-2">
            <span>Send Message</span>
            <Icon name="heroicons:paper-airplane" class="w-5 h-5" />
          </button>

          <p class="text-xs text-center text-gray-400 mt-4">
            We respect your privacy. No spam, ever.
          </p>

        </form>
      </div>

    </div>
  </div>
</section>