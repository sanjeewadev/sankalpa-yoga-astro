---
import { Icon } from 'astro-icon/components';

const values = [
  {
    title: "Scientific",
    desc: "We don't deal in mystique. We explain the 'why' and 'how' behind every technique, backed by modern physiology.",
    icon: "heroicons:beaker"
  },
  {
    title: "Inclusive",
    desc: "Yoga is for every body. We reject the idea that you need to be flexible or thin to practice. We teach accessibility.",
    icon: "heroicons:heart"
  },
  {
    title: "Sustainable",
    desc: "Ahimsa (non-violence) extends to the planet. Our campus is plastic-free, solar-powered, and grows its own food.",
    icon: "heroicons:sun"
  }
];
---

<section class="py-20 bg-primary text-white">
  <div class="container-custom">
    
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold font-display">Our Core Values</h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-10">
      {values.map((val) => (
        <div class="bg-white/5 p-8 rounded-2xl border border-white/10 hover:bg-white/10 transition-colors duration-300">
          
          <div class="mb-6 inline-block p-3 bg-white/10 rounded-xl text-accent">
            <Icon name={val.icon} class="w-8 h-8" />
          </div>
          
          <h3 class="text-white text-xl font-bold mb-3">{val.title}</h3>
          <p class="text-gray-300 leading-relaxed">
            {val.desc}
          </p>
        </div>
      ))}
    </div>
    
  </div>
</section>