---

import { Image } from 'astro:assets';
import image1 from '../../assets/yoga-teacher-training-group.avif';
import image2 from '../../assets/about-yoga-philosophy-class.avif';

const rooms = [
  {
    name: "The Garden Villa",
    type: "Private Suite",
    desc: "King bed, en-suite outdoor rain shower, private balcony overlooking the paddy fields.",
    img: image1,
  },
  {
    name: "Jungle Cabana",
    type: "Shared Twin",
    desc: "Two twin beds, shared luxury bathroom, nestled within the cinnamon trees.",
    img: image2,
  }
];
---

<section class="py-24 bg-white">
  <div class="container-custom">
    
    <div class="text-center max-w-2xl mx-auto mb-16">
      <h2 class="text-4xl font-bold text-primary mb-4">Your Home Away From Home</h2>
      <p class="text-text-muted">Designed with sustainable materials to blend seamlessly into the landscape.</p>
    </div>

    <div class="grid md:grid-cols-2 gap-10">
      {rooms.map((room) => (
        <div class="group cursor-pointer">
          <div class="overflow-hidden rounded-2xl mb-6 shadow-sm">
            <Image
              src={room.img} 
              alt={room.name} 
              loading="lazy"
              class="w-full h-64 md:h-[400px] object-cover transition-transform duration-700 group-hover:scale-105"
            />
          </div>
          
          <div class="flex justify-between items-baseline mb-2">
            <h3 class="text-2xl font-bold text-primary">{room.name}</h3>
            <span class="text-xs font-bold text-accent uppercase tracking-widest border border-accent/30 px-3 py-1 rounded-full bg-accent/5">
              {room.type}
            </span>
          </div>
          
          <p class="text-text-muted leading-relaxed">{room.desc}</p>
        </div>
      ))}
    </div>

  </div>
</section>