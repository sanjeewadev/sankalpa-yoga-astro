---
// Define the links here so they are easy to change later
const navLinks = [
  { name: "Home", href: "/" },
  { name: "Teacher Training", href: "/ttc" },
  { name: "Retreats", href: "/retreats" },
  { name: "The Institute", href: "/about" },
];
---

<header class="sticky top-0 z-50 w-full bg-secondary/80 backdrop-blur-md border-b border-gray-200">
  <div class="container-custom">
    <div class="flex items-center justify-between h-20">
      
      <div class="flex-shrink-0">
        <a href="/" class="text-2xl font-bold font-display text-primary tracking-tight">
          Sankalpa<span class="text-accent">.</span>
        </a>
      </div>

      <nav class="hidden md:flex space-x-8 items-center">
        {navLinks.map((link) => (
          <a 
            href={link.href} 
            class="text-sm font-medium text-gray-700 hover:text-primary transition-colors"
          >
            {link.name}
          </a>
        ))}
        <a href="/contact" class="btn-primary text-sm py-2 px-4">
          Contact
        </a>
      </nav>

      <div class="md:hidden">
        <button id="mobile-menu-btn" class="text-primary hover:text-accent focus:outline-none p-2">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <div id="mobile-menu" class="hidden md:hidden bg-secondary border-t border-gray-100 absolute w-full">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 shadow-lg">
      {navLinks.map((link) => (
        <a 
          href={link.href} 
          class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-primary hover:bg-gray-50"
        >
          {link.name}
        </a>
      ))}
      <a href="/contact" class="block w-full text-center mt-4 btn-primary">
        Contact
      </a>
    </div>
  </div>
</header>

<script>
  // Simple script to toggle mobile menu
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  if (menuBtn && mobileMenu) {
    menuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>