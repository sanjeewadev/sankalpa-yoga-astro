---
import { Image } from 'astro:assets';
// CONFIRM: Ensure this file name matches exactly what is in your src/assets folder
import HeroImage from '../../assets/sattvic-healthy-food-bowl.avif';
---

<section class="relative w-full h-[90vh] flex items-center overflow-hidden bg-primary-dark">
  
  <div class="absolute inset-0 z-0">
    <Image
      src={HeroImage}
      alt="Yoga Practice in Nature" 
      widths={[360, 480, 640, 768, 1024, 1280, HeroImage.width]}
      sizes="(max-width: 640px) 100vw, 100vw"
      format="webp"
      loading="eager"
      fetchpriority="high"
      class="w-full h-full object-cover"
    />
    
    <div class="absolute inset-0 bg-primary-dark/40"></div>
  </div>

  <div class="container-custom relative z-10 text-center sm:text-left">
    <div class="max-w-3xl mx-auto sm:mx-0">
      
      <span class="inline-block py-1 px-3 rounded-full bg-accent/90 text-white text-xs font-bold tracking-widest uppercase mb-4 backdrop-blur-sm">
        Est. 2026 â€¢ Sri Lanka
      </span>

      <h1 class="text-5xl sm:text-6xl md:text-7xl font-display font-bold text-white mb-6 leading-tight drop-shadow-lg">
        Ancient Wisdom for <br />
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-white to-gray-300">
          Modern Life
        </span>
      </h1>

      <p class="text-lg sm:text-xl text-gray-100 mb-8 max-w-2xl leading-relaxed drop-shadow-md">
        Join the world's premier Yoga Institute. Authentic Teacher Training and immersive retreats designed to transform your body, mind, and spirit.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center sm:justify-start">
        <a href="/ttc" class="btn-primary bg-white text-primary hover:bg-gray-100 border-none">
          Explore Courses
        </a>
        <a href="/about" class="px-6 py-3 border border-white text-base font-medium rounded-md text-white hover:bg-white/10 transition duration-300">
          Our Philosophy
        </a>
      </div>

    </div>
  </div>
</section>