---
interface Props {
  title: string;
  subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<section class="relative py-32 bg-primary-dark flex items-center justify-center overflow-hidden">
  
  <div class="absolute inset-0 z-0">
    <img 
      src="https://images.unsplash.com/photo-1599901860904-17e6ed7083a0?q=80&w=2069&auto=format&fit=crop" 
      alt="Yoga Class Background" 
      class="w-full h-full object-cover opacity-40"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-primary/80 to-primary"></div>
  </div>

  <div class="container-custom relative z-10 text-center max-w-4xl mx-auto">
    <span class="inline-block py-1 px-3 rounded-full border border-white/30 text-white text-xs font-bold tracking-widest uppercase mb-6 backdrop-blur-sm">
      Yoga Alliance Certified â€¢ RYT 200
    </span>
    <h1 class="text-4xl md:text-6xl font-display font-bold text-white mb-6">
      {title}
    </h1>
    <p class="text-xl text-gray-200 leading-relaxed max-w-2xl mx-auto">
      {subtitle}
    </p>
  </div>
</section>