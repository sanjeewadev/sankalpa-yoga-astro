---
const courses = [
  {
    date: "July 1 - July 28, 2026",
    price: "$2,400 USD",
    status: "Open",
    spots: "4 spots left"
  },
  {
    date: "Aug 15 - Sept 12, 2026",
    price: "$2,400 USD",
    status: "Waitlist",
    spots: "Full"
  },
  {
    date: "Oct 1 - Oct 28, 2026",
    price: "$2,600 USD",
    status: "Open",
    spots: "Early Bird"
  }
];
---

<section class="py-20 bg-white">
  <div class="container-custom max-w-5xl">
    
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold text-primary mb-4">Upcoming Dates & Investment</h2>
      <p class="text-text-muted">
        All packages include tuition, course manual, certification, and shared accommodation.
      </p>
    </div>

    <div class="bg-white border border-gray-200 rounded-2xl overflow-hidden shadow-lg">
      <div class="hidden md:grid grid-cols-4 bg-primary text-white font-medium py-4 px-6 text-sm uppercase tracking-wider">
        <div>Dates</div>
        <div>Price</div>
        <div>Availability</div>
        <div class="text-right">Action</div>
      </div>

      <div class="divide-y divide-gray-100">
        {courses.map((course) => (
          <div class="grid grid-cols-1 md:grid-cols-4 gap-4 p-6 items-center hover:bg-gray-50 transition-colors">
            
            <div class="font-medium text-primary flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent md:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
              {course.date}
            </div>

            <div class="text-gray-700 font-semibold">
              {course.price}
            </div>

            <div>
              <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${
                course.status === 'Open' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800'
              }`}>
                {course.status} â€¢ {course.spots}
              </span>
            </div>

            <div class="md:text-right">
              <button class={`w-full md:w-auto px-4 py-2 rounded text-sm font-medium transition-colors ${
                 course.status === 'Open' 
                 ? 'bg-primary text-white hover:bg-primary-dark' 
                 : 'bg-gray-200 text-gray-600 cursor-not-allowed'
              }`}>
                {course.status === 'Open' ? 'Apply Now' : 'Join Waitlist'}
              </button>
            </div>

          </div>
        ))}
      </div>
    </div>

  </div>
</section>