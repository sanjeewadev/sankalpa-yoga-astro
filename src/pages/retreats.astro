---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/layout/Navbar.astro';
import Footer from '../components/layout/Footer.astro';

import PageHero from '../components/common/PageHero.astro';
import RetreatInclusions from '../components/retreats/RetreatInclusions.astro';
import Accommodation from '../components/retreats/Accommodation.astro';
import RetreatCTA from '../components/retreats/RetreatCTA.astro';
---

<Layout title="Retreats - Reconnect in Nature">
  <Navbar slot="header" />
  
  <main>
    <PageHero 
      title="Sanctuary in Nature" 
      subtitle="Disconnect from the noise. Reconnect with yourself. A luxury eco-retreat in the heart of the jungle."
      label="Eco-Luxury Sanctuary" 
      image="https://cdn.pixabay.com/photo/2022/06/23/06/24/yoga-asanas-7279224_1280.jpg"
    />
    <RetreatInclusions />
    <Accommodation />
    <RetreatCTA />
  </main>

  <Footer slot="footer" />
</Layout>