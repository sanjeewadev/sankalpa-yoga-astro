---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/layout/Navbar.astro';
import Footer from '../components/layout/Footer.astro';
import PageHero from '../components/common/PageHero.astro';

// Components
import Curriculum from '../components/ttc/Curriculum.astro';
import DailySchedule from '../components/ttc/DailySchedule.astro';
import WhoIsThisFor from '../components/ttc/WhoIsThisFor.astro';
import SyllabusCTA from '../components/ttc/SyllabusCTA.astro';
---

<Layout title="200-Hour Teacher Training">
  <Navbar slot="header" />

  <main>
    <PageHero 
      title="200-Hour Yoga Teacher Training" 
      subtitle="A transformative journey into the heart of yoga. Become a confident, certified teacher."
      label="Yoga Alliance Certified"
      image="https://images.unsplash.com/photo-1599901860904-17e6ed7083a0?q=80&w=2069&auto=format&fit=crop"
    />
    
    <Curriculum />
    
    <WhoIsThisFor />

    <DailySchedule />
    
    <SyllabusCTA />
  </main>

  <Footer slot="footer" />
</Layout>